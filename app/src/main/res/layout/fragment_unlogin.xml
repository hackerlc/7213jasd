<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <variable
            name="viewmodel"
            type="com.liangke.mvvm.viewmodel.UnLoginViewModel"
            ></variable>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:background="@color/blue_01"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/bell"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    >

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/headphones"
                            />
                    </LinearLayout>



                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_02"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        ></View>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/share"
                            />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="25dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:text="登陆"
                android:gravity="center"
                android:textColor="@color/black_01"
                android:textSize="18sp"
                android:background="@drawable/bg_shape_cornor_stoke_black"
                >
            </TextView>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:text="注册"
                android:gravity="center"
                android:textColor="@color/blue_01"
                android:textSize="18sp"
                android:background="@drawable/bg_shape_cornor_stoke_blue"
                android:layout_marginTop="20dp"
                >
            </TextView>


        </LinearLayout>

    </LinearLayout>

</layout>