<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itme"
            type="com.liangke.mvvm.bean.CommunityBean"
            ></variable>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_avatar"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            tools:text="我是交易员"/>
        <ImageView
            android:id="@+id/iv_avatar_tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/iv_avatar"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textSize="12sp"
            tools:text="12分钟前" />
        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="关注"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_message_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignLeft="@+id/iv_avatar"
            android:layout_below="@+id/iv_avatar"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_message_img"
            android:layout_below="@+id/iv_avatar"
            android:layout_toRightOf="@+id/iv_message_img"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="10dp"
            android:maxLines="4"
            tools:text="123333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333333"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/iv_message_img"
            android:layout_marginTop="12dp"
            android:background="@color/hint" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/line1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_like"
                    android:layout_marginLeft="8dp"
                    tools:text="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_launcher"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</layout>